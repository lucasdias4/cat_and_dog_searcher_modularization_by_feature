<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_start"
        style="@style/D_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_start_logo_view"
        android:textColor="@color/text_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_middle"
        style="@style/A_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_marginBottom="@dimen/dimen_8"
        android:text="@string/title_middle_logo_view"
        android:textColor="@color/text_6"
        app:layout_constraintBottom_toBottomOf="@id/title_start"
        app:layout_constraintStart_toEndOf="@id/title_start" />

    <TextView
        android:id="@+id/title_end"
        style="@style/D_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16"
        android:text="@string/title_end_logo_view"
        android:textColor="@color/text_5"
        app:layout_constraintBottom_toBottomOf="@id/title_start"
        app:layout_constraintStart_toEndOf="@id/title_middle" />

</androidx.constraintlayout.widget.ConstraintLayout>